@{
}
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
@model IEnumerable<Learner>
<h1>@ViewBag.pageNum</h1>

<div class="ms-2 mx-2">
    <h1>Learner List</h1>
    @await Component.InvokeAsync("Major")
    <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
        <div class="input-group">
            <input id="keyword" class="form-control" name="keyword"
                   type="text" placeholder="Search learner" />
            <button id="btnSearch" class="btn btn-primary" type="button">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </form>

    <div id="content"> @* đánh dấu the div để bao cái table learner , khi action PartialView("TableLearner", Learner) được gọi thì cái thẻ div này sẽ bao cái table Learner*@
        <div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Mã</th>
                        <th>Tên</th>
                        <th>Họ</th>
                        <th>Ngành</th>
                        <th>Ngày Nhập Học</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model)
                    {
                        <tr>
                            <td>@s.LearnerID</td>
                            <td>@s.FirstMidName</td>
                            <td>@s.LastName</td>
                            <td>@s.Major.MajorName</td>
                            <td>@s.EnrollmentDate</td>
                            @*<td><a asp-action="Edit">Edit</a>|<a asp-action="Delete">Delete</a></td>*@
                            <td>
                                <a asp-action="Edit" asp-route-id="@s.LearnerID">Edit</a> |
                                <a asp-action="Delete" asp-route-id="@s.LearnerID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
        <ul class="pagination">
            @for (int i = 1; i <= ViewBag.pageNum; i++)
            {
                <li class="page-item" page="@i"
                @(ViewBag.mid != null ? "mid= '@ViewBag.mid'" : "")
                @(ViewBag.keyword != null ? "keywordSearch='@ViewBag.keyword'" : "")>

                    <a class="page-link">@i</a>
                </li>

            }
        </ul>

    </div>

    <a asp-action="Create" class="btn btn-primary">Create New Student</a>
   
</div>

@*viết script đê thực thi hàm thay đổi vùng div content chứ table learner*@
<script src="~/js/"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
@section Scripts{
    <script>
        $('body').on('click', 'li.page-item', function(e) {
            var page = $(this).attr("page");
            var mid = $(this).attr("mid");
            var keyword = $(this).attr("keyword");
            var data = { mid: mid, pageIndex : page, keyword : keyword}
            $.ajax({
                url: "LearnerFilter",
                data: data,
                success: function(reponse){
                    $("div#content").html(reponse);
                }
            });
        });

        $(".nav li").click(function (e) { // khi click vào thẻ li ( chứ các tên MajorID thì sẽ thực thi hàm sau). trong trường hợp dự án có nhiêu thể li khác nhau thì mình phải đặt id cho li
            var id = $(this).attr("id"); //lấy cái biến id
            var data ={mid : id};
            console.log("run");
            $.ajax({
                url: "LearnerFilter", // chạy cái action LearnerBy Major
                data: data,     // dât gửi lên chính là cái id
                success: function (response) {
                    $("div#content").html(response); // thay đổi cái html bằng cái response nhận được (chính là cái table learner) thẻ div có id Content sẽ bao cái table learner sau khi reponse
                }
            });
        });

        $("button#btnSearch").click(function (e) {
            var keyword = $("#keyword").val();
            var data = { keyword: keyword };
            $.ajax({
                url: "LearnerFilter",
                data: data,
                success: function (response) {
                    $("div#content").html(response);

                }
            });
        });
    </script>
}
